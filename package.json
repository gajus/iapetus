{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "test/iapetus/**/*"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "timeout": "30s"
  },
  "dependencies": {
    "express": "^4.17.1",
    "http-terminator": "^3.0.3",
    "prom-client": "^14.0.1",
    "prometheus-gc-stats": "^0.6.3",
    "roarr": "^7.4.0",
    "serialize-error": "^8.1.0",
    "typescript": "^4.4.4"
  },
  "description": "Prometheus metrics server.",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/prometheus-gc-stats": "^0.6.2",
    "ava": "^3.15.0",
    "coveralls": "^3.1.1",
    "eslint": "^7.5.0",
    "eslint-config-canonical": "^31.0.3",
    "get-port": "^5.1.1",
    "gitdown": "^3.1.4",
    "got": "^11.8.2",
    "husky": "^7.0.4",
    "nyc": "^15.1.0",
    "semantic-release": "^18.0.0",
    "ts-node": "^10.4.0"
  },
  "engines": {
    "node": ">10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run build"
    }
  },
  "keywords": [
    "kubernetes",
    "prometheus"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "iapetus",
  "nyc": {
    "all": true,
    "exclude": [
      "**/*.d.ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "silent": true,
    "sourceMap": false
  },
  "scripts": {
    "build": "rm -fr ./dist && NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps && flow-copy-source src dist",
    "generate-readme": "gitdown ./.README/README.md --output-file ./README.md",
    "lint": "eslint . && tsc --noEmit",
    "test": "NODE_ENV=test ava --verbose --serial"
  },
  "types": "./dist/src/index.d.ts",
  "version": "1.0.0"
}
