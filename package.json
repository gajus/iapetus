{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "babel": {
      "compileAsTests": [
        "test/helpers/**/*"
      ]
    },
    "files": [
      "test/iapetus/**/*"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "dependencies": {
    "express": "^4.17.1",
    "http-terminator": "^2.0.2",
    "prom-client": "^11.5.3",
    "prometheus-gc-stats": "^0.6.2",
    "roarr": "^2.15.2",
    "serialize-error": "^5.0.0"
  },
  "description": "Prometheus metrics server.",
  "devDependencies": {
    "@ava/babel": "^1.0.0",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-transform-flow-strip-types": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "ava": "^3.2.0",
    "axios": "^0.19.2",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-transform-export-default-name": "^2.0.4",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-canonical": "^18.1.1",
    "flow-bin": "^0.117.0",
    "flow-copy-source": "^2.0.9",
    "get-port": "^5.1.1",
    "gitdown": "^3.1.2",
    "husky": "^4.2.1",
    "invariant": "^2.2.4",
    "nyc": "^15.0.0",
    "semantic-release": "^17.0.2"
  },
  "engines": {
    "node": ">10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run build"
    }
  },
  "keywords": [
    "kubernetes",
    "prometheus"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "iapetus",
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "html",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "silent": true,
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/iapetus"
  },
  "scripts": {
    "build": "rm -fr ./dist && NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps && flow-copy-source src dist",
    "generate-readme": "gitdown ./.README/README.md --output-file ./README.md",
    "lint": "eslint ./src ./test && flow",
    "test": "NODE_ENV=test ava --verbose --serial"
  },
  "version": "1.0.1"
}
